doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title #{docTitle}
    body 
        div#main 
            h1 Products 
            ul(class='list')
                if products.length>0
                    each product in products
                        li #{product.title}, price = $#{product.price}
                else 
                    p No products
        footer.footer Copy Rights
